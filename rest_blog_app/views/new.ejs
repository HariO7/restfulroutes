<%- include("partials/header") -%>
<div class="ui main text container segment">
    <div class="ui huge header">Create your Blog</div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label>Name</label>
            <input type="text" name="blog[name]" placeholder="Enter the name">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="Image URL">
        </div>
        <textarea name="blog[body]" cols="30" rows="10"></textarea>
        <input class="ui teal button" type="submit">
    </form>

</div>

<%- include("partials/footer") -%>